/* 
 - current draft
 - always "@nest" (this is a coding style preference)
 */
.block {
	color: green;
	box-sizing: border-box;
	height: auto;
	padding-left: 1.25rem;
	padding-right: 1.25rem;
	position: relative;
	width: 100%;
	z-index: 1;

	@nest .some-ancestor-context & {
		color: blue;
	}

	@nest .some-preceding-context ~ & {
		color: yellow;
	}
}

p {
	font-size: 1.125rem;

	@nest & + & {
		padding-top: 0.25rem;

		@nest article & {
			padding-top: 0.5rem;
		}

		/* this will not match what you would expect */
		@nest h2 ~ & {
			padding-top: 0.5rem;
		}
	}
}
